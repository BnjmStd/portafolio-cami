---
import Layout from "~/layouts/Layout.astro";
import Proyectos from "./1.md";

const { frontmatter } = Astro.props;
---

<Layout title="Mi tesis">
  <article class="markdown-body">
    <Proyectos />
  </article>
</Layout>

<style>
  p,
  li,
  blockquote {
    text-wrap: pretty;
  }

  .markdown-body {
    max-width: 900px;
    margin: 3rem auto;
    padding: 2rem;
    background: #ffffff;
    border-radius: 12px;
    font-family: "Inter", sans-serif;
    color: #1e293b;
    line-height: 1.7;
    font-size: 1rem;
  }

  /* Encabezados */
  .markdown-body h1,
  .markdown-body h2,
  .markdown-body h3 {
    font-family: "Playfair Display", serif;
    font-weight: 700;
    color: #0f172a;
    line-height: 1.2;
  }

  .markdown-body h1 {
    font-size: 2.25rem;
    margin-bottom: 1rem;
    border-bottom: 3px solid #3b82f6;
    display: inline-block;
    padding-bottom: 0.25rem;
  }

  .markdown-body h2 {
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #1e293b;
  }

  .markdown-body h3 {
    font-size: 1.25rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  /* Párrafos y texto */
  .markdown-body p {
    margin-bottom: 1.25rem;
  }

  .markdown-body strong {
    color: #0f172a;
  }

  .markdown-body em {
    color: #475569;
  }

  /* Tablas */
  .markdown-body table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    font-size: 0.95rem;
  }

  .markdown-body th,
  .markdown-body td {
    border: 1px solid rgba(148, 163, 184, 0.3);
    padding: 0.75rem;
    text-align: center;
  }

  .markdown-body th {
    background: #f1f5f9;
    font-weight: 600;
  }

  /* Imágenes */
  .markdown-body img {
    width: 100%;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease;
  }

  .markdown-body img:hover {
    transform: scale(1.02);
  }

  /* Cita o nota */
  .markdown-body blockquote {
    margin: 1.5rem 0;
    padding: 1rem 1.5rem;
    background: #eff6ff;
    border-left: 4px solid #3b82f6;
    color: #334155;
    border-radius: 6px;
  }

  /* Separador */
  .markdown-body hr {
    border: none;
    border-top: 2px dashed rgba(148, 163, 184, 0.3);
    margin: 2.5rem 0;
  }

  /* Texto en cursiva o pie */
  .markdown-body em {
    color: #475569;
  }

  /* Responsivo */
  @media (max-width: 768px) {
    .markdown-body {
      padding: 1.5rem;
      margin: 1.5rem;
    }

    .markdown-body h1 {
      font-size: 1.75rem;
    }

    .markdown-body h2 {
      font-size: 1.25rem;
    }
  }

</style>
