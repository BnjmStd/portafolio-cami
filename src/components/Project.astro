---
import ProjectRevitCard from "./cards/ProjectRevitCard.astro";
import SectionAndTitle from "./SectionAndTitle.astro";

const projects = [
  {
    image: "/projects/tesis_cami.jpg",
    title: "Memoria de título",
    description:
      "PROPUESTA DE MEJORA CONSTRUCTIVA CON LA METODOLOGÍA BIM, PARA VIVIENDAS UNIFAMILIARES DE LA CONSTRUCTORA COLBÚN SPA",
    slug: "project1",
  },
];
---

<SectionAndTitle title="Projects">
  <div class="projects-grid">
    {
      projects.map((p) => (
        <ProjectRevitCard {...p} type="project" href={`/blog/${p.slug}`} />
      ))
    }
  </div>
</SectionAndTitle>

<style>
  .projects {
    padding: 4rem 1rem;
  }

  @media (min-width: 640px) {
    .projects {
      padding-top: 5rem;
      padding-bottom: 5rem;
    }
  }

  .projects-title {
    margin-bottom: 2rem;
    text-align: center;
    font-size: 1.875rem;
    font-weight: 700;
    letter-spacing: -0.015em;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 640px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
