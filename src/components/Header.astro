---
import Bd from "~/icons/Bd.astro";
import ButtonDownloadCv from "./ButtonDownloadCv.astro";

const links = [
  { href: "/project", label: "Projects" },
  { href: "/models", label: "Revit Models" },
];
---

<header class="header">
  <div class="header-container">
    <a href="/" class="header-left">
      <Bd />
      <h2 class="header-title">Civil Engineering Portfolio</h2>
    </a>
    <nav class="header-nav">
      {links.map((link) => <a href={link.href}>{link.label}</a>)}
      <ButtonDownloadCv />
    </nav>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 10;
    width: 100%;
    border-bottom: 1px solid rgba(226, 232, 240, 0.8);
    background-color: rgba(var(--background-light-rgb, 255, 255, 255), 0.8);
    padding-block: 0.5rem;
    backdrop-filter: blur(4px);
  }

  :global(.dark) .header {
    border-bottom: 1px solid rgba(30, 41, 59, 0.8);
    background-color: rgba(var(--background-dark-rgb, 15, 23, 42), 0.8);
  }

  .header-container {
    max-width: 1280px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .header-left {
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
    color: black;
  }

  .header-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0;
  }

  .header-nav {
    display: none;
    align-items: center;
    gap: 2rem;
  }

  .header-nav a {
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    color: inherit;
    transition: color 0.2s ease-in-out;
  }

  .header-nav a:hover {
    color: var(--primary, #3b82f6);
  }

  @media (min-width: 768px) {
    .header-nav {
      display: flex;
    }
  }
</style>
