---
import RevitModeling from "~/icons/RevitModeling.astro";
import StructuralAnalysis from "~/icons/StructuralAnalysis.astro";
import ProjectManager from "~/icons/ProjectManager.astro";
import TechnicalReporting from "~/icons/TechnicalReporting.astro";
import SkillCard from "./cards/SkillCard.astro";

const skills = [
  { icon: RevitModeling, name: "Revit Modeling" },
  { icon: StructuralAnalysis, name: "Structural Analysis" },
  { icon: ProjectManager, name: "Project Management" },
  { icon: TechnicalReporting, name: "Technical Reporting" },
];
---

<section class="featured">
  <h2 class="skills-title">Core Skills</h2>
  <div class="skills-grid">
    {
      skills.map(({ icon: Icon, name }) => (
        <SkillCard variant="row">
          <div class="skill-icon">
            <Icon />
          </div>
          <h3 class="skill-text">{name}</h3>
        </SkillCard>
      ))
    }
  </div>
</section>

<style>
  @media (min-width: 640px) {
    .skills {
      padding-top: 5rem;
      padding-bottom: 5rem;
    }
  }

  .skills-title {
    margin-bottom: 2rem;
    text-align: center;
    font-size: 1.875rem;
    font-weight: 700;
    letter-spacing: -0.015em;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .skills-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .skills-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .skill-icon {
    border-radius: 9999px;
    background-color: rgba(59, 130, 246, 0.1);
    padding: 0.75rem;
    color: var(--primary, #3b82f6);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .skill-text {
    font-size: 1rem;
    font-weight: 700;
    margin: 0;
  }
</style>
