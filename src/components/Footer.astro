---
import Github from "~/icons/Github.astro";
import Linkdn from "~/icons/Linkdn.astro";

const currentNameCompany =
  "Servicios Informáticos Valenzuela, Astudillo y Compañía Limitada";
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-content">
      <div class="footer-links">
        <a href="https://www.linkedin.com/in/camila-diaz690">
          <Linkdn />
        </a>
        <!-- <a href="#">
          <Twitter />
        </a> -->
        <a href="#">
          <Github />
        </a>
      </div>
      <p class="footer-text">
        © 2025 {currentNameCompany}. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    border-top: 1px solid rgba(226, 232, 240, 0.8); /* slate-200/80 */
    background-color: var(--background-light, #ffffff);
  }

  :global(.dark) .footer {
    border-top: 1px solid rgba(30, 41, 59, 0.8); /* slate-800/80 */
    background-color: var(--background-dark, #0f172a);
  }

  .footer-container {
    max-width: 1280px; /* max-w-7xl */
    margin-left: auto;
    margin-right: auto;
    padding: 2.5rem 1.25rem; /* py-10 px-5 */
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.5rem; /* gap-6 */
  }

  .footer-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem; /* gap-6 */
  }

  .footer-links a {
    color: rgb(100, 116, 139); /* slate-500 */
    transition: color 0.2s ease-in-out;
  }

  .footer-links a:hover {
    color: var(--primary, #3b82f6); /* primary */
  }

  :global(.dark) .footer-links a {
    color: rgb(148, 163, 184); /* slate-400 */
  }

  .footer-text {
    font-size: 0.875rem; /* text-sm */
    color: rgb(100, 116, 139); /* slate-500 */
  }

  :global(.dark) .footer-text {
    color: rgb(148, 163, 184); /* slate-400 */
  }
</style>
