---
import ProjectRevitCard from "./cards/ProjectRevitCard.astro";

const featuredModels = [
  { image: "/edi1.png", title: "Residential Building Model", description: "Detailed Revit model of a modern residential building." },
  { image: "/edi2.png", title: "Commercial Complex Model", description: "Comprehensive Revit model of a commercial complex." },
  { image: "/edi3.png", title: "Infrastructure Project Model", description: "Revit model of a large-scale infrastructure project." },
];
---

<section class="featured">
  <h2 class="featured-title">Featured Revit Models</h2>
  <div class="featured-grid">
    {featuredModels.map((m) => (
      <ProjectRevitCard {...m} type="model" />
    ))}
  </div>
</section>

<style>
  .featured-title {
    margin-bottom: 2rem;
    text-align: center;
    font-size: 1.875rem;
    font-weight: 700;
    letter-spacing: -0.015em;
  }

  .featured-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 640px) {
    .featured-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .featured-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
