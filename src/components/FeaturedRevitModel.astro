---
import ProjectRevitCard from "./cards/ProjectRevitCard.astro";
import SectionAndTitle from "./SectionAndTitle.astro";

const featuredModels = [
  {
    image: "/models/capri.jpg",
    title: "Capri Building Model",
    description: "Detailed Revit model of a modern residential building.",
    modelPath: "/3d/capri.glb",
  },
];
---

<SectionAndTitle title="Featured Revit Models">
  <div class="featured-grid">
    {featuredModels.map((m) => <ProjectRevitCard {...m} type="model" />)}
  </div>
</SectionAndTitle>

<style>
  .featured-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 640px) {
    .featured-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .featured-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
