---
import ProjectRevitCard from "./cards/ProjectRevitCard.astro";

const featuredModels = [
  {
    image: "/models/capri.jpg",
    title: "Capri Building Model",
    description: "Detailed Revit model of a modern residential building.",
    modelPath: "/3d/capri.glb",
  },
];
---

<section class="featured">
  <h2 class="featured-title">Featured Revit Models</h2>
  <div class="featured-grid">
    {featuredModels.map((m) => <ProjectRevitCard {...m} type="model" />)}
  </div>
</section>

<style>
  .featured-title {
    margin-bottom: 2rem;
    text-align: center;
    font-size: 1.875rem;
    font-weight: 700;
    letter-spacing: -0.015em;
  }

  .featured-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 640px) {
    .featured-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .featured-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
