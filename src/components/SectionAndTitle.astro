---
interface Props {
  title: string;
  sectionId?: string;
}

const { title, sectionId } = Astro.props;
---

<section id={sectionId} class="featured">
  <h1>{title}</h1>
  <slot />
</section>

<style>
  h1 {
    margin-bottom: 2rem;
    text-align: center;
    font-size: 1.875rem;
    font-weight: 700;
    letter-spacing: -0.015em;
  }

  :global(.dark) h1 {
    color: #ffffff;
  }
</style>
