---
import Badge from "./Badge.astro";

const nombre = "Camila Aracena";
const rol = "Ingenier√≠a Civil | Especializada en Modelado Revit";
---

<section class="featured" id="inicio">
  <div class="hero">
    <div class="hero-content">
      <div class="hero-text animate-in">
        <h1 class="hero-title">
          <span class="gradient-text">{nombre}</span>
        </h1>
        <h2 class="hero-role">{rol}</h2>
        <a href="#proyectos" class="hero-button">Ver Proyectos</a>
      </div>
    </div>

    <div class="container-img animate-in">
      <img
        src="/profile.jpg"
        alt="Camila Aracena"
        class="custom-image"
        width="300"
        height="300"
      />
    </div>
  </div>
</section>

<style>

  .featured {
    padding: 3rem 1.5rem;
  }

  .hero {
    background: linear-gradient(
        rgba(15, 23, 42, 0.65),
        rgba(15, 23, 42, 0.8)
      ),
      url("/terreno.png") center/cover no-repeat;
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 2rem;
    overflow: hidden;
  }

  .hero-content {
    flex: 1 1 45%;
    padding: 3rem;
  }

  .hero-text {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .hero-title {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    color: #fff;
    line-height: 1.2;
    margin: 0;
  }

  .gradient-text {
    background: linear-gradient(90deg, #60a5fa, #a78bfa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero-role {
    font-family: 'Inter', sans-serif;
    font-size: 1.2rem;
    color: rgb(226, 232, 240);
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .hero-button {
    align-self: flex-start;
    background: linear-gradient(90deg, #3b82f6, #6366f1);
    color: white;
    border: none;
    padding: 0.8rem 1.6rem;
    border-radius: 0.5rem;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
  }

  .hero-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(99, 102, 241, 0.5);
  }

  .container-img {
    flex: 1 1 40%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem;
  }

  .custom-image {
    width: 16rem;
    height: 16rem;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 0 25px rgba(99, 102, 241, 0.2);
    transition: all 0.3s ease;
  }

  .custom-image:hover {
    transform: scale(1.05);
    box-shadow: 0 0 30px rgba(99, 102, 241, 0.4);
  }

  @media (max-width: 768px) {
    .hero {
      flex-direction: column;
      text-align: center;
      padding: 2rem;
    }

    .hero-content {
      padding: 1rem;
    }

    .hero-button {
      align-self: center;
    }
  }

  /* Animaciones */
  .animate-in {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeUp 0.8s ease forwards;
  }

  @keyframes fadeUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
