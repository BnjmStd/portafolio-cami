---
import Badge from "./Badge.astro";

const nombre = "Camila Aracena";
---

<section class="featured">
  <div class="hero">
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">{nombre}</h1>
        <p class="hero-subtitle">
          Ingeniería Civil Reciente Graduada | Especializada en Modelado Revit
        </p>
        <Badge text="Disponible para Contratación" />
      </div>
      <a href="#proyectos" class="hero-button">Ver Proyectos</a>
    </div>
    <div class="container-img">
      <img
        width="200"
        height="200"
        src="/profile.jpg"
        alt="Descripción de la imagen"
        class="custom-image"
      />
    </div>
  </div>
</section>

<script>
  document.addEventListener("astro:page-load", () => {
    const sections = document.querySelectorAll("section");
    const navItems = document.querySelectorAll("header nav a");

    const callback = (entries: any[]) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          navItems.forEach((item) => {
            if (item.getAttribute("aria-label") == entry.target.id) {
              item.classList.add("text-blue-500");
            } else {
              item.classList.remove("text-blue-500");
            }
          });
        }
      });
    };

    const observer = new IntersectionObserver(callback, {
      root: null,
      rootMargin: "0px",
      threshold: 0.3,
    });

    sections.forEach((section) => {
      observer.observe(section);
    });

    // Cleanup function
    document.onvisibilitychange = () => {
      if (document.visibilityState === "hidden") {
        observer.disconnect();
      } else {
        sections.forEach((section) => {
          observer.observe(section);
        });
      }
    };
  });
</script>

<style>
  /*  */

  .container-img {
    display: inline-block;
    padding: 0.4rem;
    border: 1px dashed rgba(0, 0, 0, 0.3);
    border-radius: 1rem;
    transform: rotate(3deg);
  }

  .custom-image {
    display: block;
    width: 6rem;
    aspect-ratio: 1 / 1;
    object-fit: cover;
    border-radius: 0.8rem;
  }

  @media (min-width: 768px) {
    .custom-image {
      order: 2;
    }
  }

  @media (min-width: 1024px) {
    .custom-image {
      padding: 0.5rem;
      width: 16rem;
    }
  }

  @media (prefers-color-scheme: dark) {
    .custom-image {
      background-color: rgba(234, 179, 8, 0.05);
      box-shadow: 0 0 0 1px rgba(255, 255, 255, 0.2);
    }
  }

  /*  */

  .hero {
    border-radius: 0.75rem;
    background-image: linear-gradient(
        rgba(0, 0, 0, 0.2) 0%,
        rgba(0, 0, 0, 0.6) 100%
      ),
      url("/terreno.png");
    background-size: cover;
    background-position: center;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .hero-content {
    display: flex;
    min-height: 480px;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-end;
    padding: 2rem;
  }

  @media (min-width: 640px) {
    .hero-content {
      padding: 3rem;
    }
  }

  .hero-text {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    text-align: left;
  }

  .hero-title {
    font-size: 2.25rem;
    font-weight: 900;
    color: #ffffff;
    margin: 0;
  }

  @media (min-width: 640px) {
    .hero-title {
      font-size: 3rem;
    }
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 3.75rem;
    }
  }

  .hero-subtitle {
    max-width: 32rem;
    font-size: 1rem;
    color: rgb(226, 232, 240);
    margin: 0;
  }

  @media (min-width: 640px) {
    .hero-subtitle {
      font-size: 1.125rem; /* sm:text-lg */
    }
  }

  .hero-button {
    margin-top: 2rem; /* mt-8 */
    border-radius: 0.5rem; /* rounded-lg */
    background-color: var(--primary, #3b82f6); /* bg-primary */
    padding: 0.75rem 1.5rem; /* py-3 px-6 */
    font-size: 1rem; /* text-base */
    font-weight: 700; /* font-bold */
    color: #ffffff;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* shadow-lg */
    transition: transform 0.2s ease-in-out;
    cursor: pointer;
    border: none;
    text-decoration: none;
  }

  .hero-button:hover {
    transform: scale(1.05); /* hover:scale-105 */
  }
</style>
