---
const nombre = "Camila Aracena";
---

<div class="hero">
  <div class="hero-content">
    <div class="hero-text">
      <h1 class="hero-title">{nombre}</h1>
      <p class="hero-subtitle">
        Ingenier√≠a Civil Reciente Graduada | Especializada en Modelado Revit
      </p>
    </div>
    <button class="hero-button">Ver Proyectos</button>
  </div>
</div>

<style>
  .hero {
    border-radius: 0.75rem;
    background-image: linear-gradient(
        rgba(0, 0, 0, 0.2) 0%,
        rgba(0, 0, 0, 0.6) 100%
      ),
      url("/terreno.png");
    background-size: cover;
    background-position: center;
  }

  .hero-content {
    display: flex;
    min-height: 480px;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-end;
    padding: 2rem;
  }

  @media (min-width: 640px) {
    .hero-content {
      padding: 3rem;
    }
  }

  .hero-text {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    text-align: left;
  }

  .hero-title {
    font-size: 2.25rem;
    font-weight: 900;
    color: #ffffff;
    margin: 0;
  }

  @media (min-width: 640px) {
    .hero-title {
      font-size: 3rem;
    }
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 3.75rem;
    }
  }

  .hero-subtitle {
    max-width: 32rem;
    font-size: 1rem;
    color: rgb(226, 232, 240);
    margin: 0;
  }

  @media (min-width: 640px) {
    .hero-subtitle {
      font-size: 1.125rem; /* sm:text-lg */
    }
  }

  .hero-button {
    margin-top: 2rem; /* mt-8 */
    border-radius: 0.5rem; /* rounded-lg */
    background-color: var(--primary, #3b82f6); /* bg-primary */
    padding: 0.75rem 1.5rem; /* py-3 px-6 */
    font-size: 1rem; /* text-base */
    font-weight: 700; /* font-bold */
    color: #ffffff;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* shadow-lg */
    transition: transform 0.2s ease-in-out;
    cursor: pointer;
    border: none;
  }

  .hero-button:hover {
    transform: scale(1.05); /* hover:scale-105 */
  }
</style>
